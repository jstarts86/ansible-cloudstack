<configuration>
    <!-- Set the default file system URI -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://{{ namenode_hostname }}:9000</value>
    </property>
    <property>
        <name>hadoop.security.authentication</name>
        <value>simple</value>
    </property>
    <property>
        <name>hadoop.proxyuser.root.hosts</name>
        <value>*</value>
        <description>
            Allow the 'root' user to connect from any host ('*') to act as a proxy.
            In a production system, you would restrict this to the IP of the Livy server.
        </description>
    </property>

    <property>
        <name>hadoop.proxyuser.root.groups</name>
        <value>*</value>
        <description>
            Allow the 'root' user to impersonate users belonging to any group ('*').
            This is also something you might restrict in a high-security environment.
        </description>
    </property>
</configuration>
