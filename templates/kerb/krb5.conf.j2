[libdefaults]
    default_realm = {{ kerberos_realm }}
    dns_lookup_realm = false
    dns_lookup_kdc = false
    ticket_lifetime = 24h
    forwardable = true

[realms]
    {{ kerberos_realm }} = {
        kdc = {{ kdc_server }}
        admin_server = {{ kdc_server }}
    }

[domain_realm]
    .yourdomain.com = {{ kerberos_realm }}
    yourdomain.com = {{ kerberos_realm }}

